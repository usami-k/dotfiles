configure_git: true
warnings_as_errors: true
enable_static_analyzer: true
use_cocoapods: true
enable_settings: true
strict_prompts: true
deployment_target: 8.1

run_script_phases:
  - file: todo.sh
    name: Warn for TODO and FIXME comments
  - file: version.sh
    name: Set Version Number

templates:
  - Gemfile.rb: Gemfile
  - README.md: README.md

xcode_command: open .

project_template: swift

app_target_templates:
  objc:
    - <%= project_name %>:
      - Models:
      - ViewModels:
      - Controllers:
        - <%= prefix %>AppDelegate.m
        - <%= prefix %>AppDelegate.h
      - Views:
        - Main.storyboard
      - Resources:
        - Images.xcassets
        - LaunchScreen.xib
      - Supporting Files:
        - Info.plist
        - main.m
      - Debug:
        - <%= prefix %>Log.m
        - <%= prefix %>Log.h
  swift:
    - <%= project_name %>:
      - Models:
      - ViewModels:
      - Controllers:
        - AppDelegate.swift
      - Views:
        - Main.storyboard
      - Resources:
        - Images.xcassets
        - LaunchScreen.xib
      - Supporting Files:
        - Info.plist
      - Debug:

test_target_templates:
  objc:
    - <%= test_target_name %>:
      - Tests:
      - Helpers:
      - Supporting Files:
        - <%= test_target_name %>-Info.plist
  swift:
    - <%= test_target_name %>:
      - Tests:
      - Helpers:
      - Supporting Files:
        - <%= test_target_name %>-Info.plist

