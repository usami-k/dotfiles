configure_git: true
warnings_as_errors: true
enable_static_analyzer: true
use_cocoapods: true
enable_settings: true
strict_prompts: true
deployment_target: 7.1

templates:
  - Gemfile.rb: Gemfile

project_template: objc

app_target_templates:
  objc:
    - <%= project_name %>:
      - Models:
      - ViewModels:
      - Controllers:
        - <%= prefix %>AppDelegate.h
        - <%= prefix %>AppDelegate.m
      - Views:
        - Main.storyboard
      - Resources:
        - Images.xcassets
      - Supporting Files:
        - Info.plist
        - main.m
  swift:
    - <%= project_name %>:
      - Models:
      - ViewModels:
      - Controllers:
        - AppDelegate.swift
      - Views:
        - Main.storyboard
      - Resources:
        - Images.xcassets
      - Supporting Files:
        - Info.plist

test_target_templates:
  objc:
    - <%= test_target_name %>:
      - Tests:
      - Helpers:
      - Supporting Files:
        - <%= test_target_name %>-Info.plist
  swift:
    - <%= test_target_name %>:
      - Tests:
      - Helpers:
      - Supporting Files:
        - <%= test_target_name %>-Info.plist

